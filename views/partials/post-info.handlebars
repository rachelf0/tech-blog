<section class="card-post">
    <div class="card-post-header">
        <div class="title">
            <a href="/post/{{id}}" class="card-link">{{title}}</a>
        </div>
        <div class="meta">
            Posted by {{user.username}} on {{format_date created_at}}
        </div>
    </div>
    <div class="content">
        <p>{{post_content}}</p>
    </div>
</section>