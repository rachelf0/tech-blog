<section class="card">
    <h3 class="card-header">Login</h3>
    <form class="login-form">
        <div>
            <label for="email-login">email</label>
            <input class="card-input" type="text" id="email-login" />
        </div>

        <div>
            <label for="password-login">password</label>
            <input class="card-input" type="password" id="password-login" />
        </div>

        <div>
            <button class="card-button" type="submit">Login</button>
        </div>

        <div>
            <a class="card-login-link" href="sign-up">Sign up instead</a>
        </div>
    </form>
</section>

